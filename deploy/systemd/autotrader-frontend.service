[Unit]
Description=AutoTrader Frontend (Vite Preview)
After=network.target autotrader-backend.service

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/autotraderx/frontend
Environment="PATH=/home/ubuntu/.nvm/versions/node/v20.18.0/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/ubuntu/.nvm/versions/node/v20.18.0/bin/npm run preview -- --host 0.0.0.0 --port 4173
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
