# Core infrastructure
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=autotrader
POSTGRES_USER=autotrader
POSTGRES_PASSWORD=autotrader
DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# API keys and secrets
UPBIT_ACCESS_KEY=your_upbit_access_key_here
UPBIT_SECRET_KEY=your_upbit_secret_key_here
GROQ_API_KEY=your_groq_api_key_here
OLLAMA_BASE_URL=http://host.docker.internal:11434
SECRET_KEY=change_me_to_secure_value

# ==================== Phase A: 인증 시스템 ====================
# 암호화 키 생성: docker compose exec backend python -c "from app.core.encryption import generate_encryption_key; print(generate_encryption_key())"
ENCRYPTION_KEY=change_me_to_fernet_key

# JWT 비밀키 생성: docker compose exec backend python -c "from app.core.jwt import generate_jwt_secret; print(generate_jwt_secret())"
JWT_SECRET_KEY=change_me_to_jwt_secret

# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Naver OAuth (https://developers.naver.com/apps/#/register)
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret
NAVER_REDIRECT_URI=http://localhost:3000/auth/naver/callback

# Kakao OAuth (https://developers.kakao.com/console/app)
KAKAO_CLIENT_ID=your_kakao_rest_api_key
KAKAO_REDIRECT_URI=http://localhost:3000/auth/kakao/callback

# Trading configuration defaults
DEFAULT_TRADE_AMOUNT=50000
MAX_OPEN_POSITIONS=3
STOP_LOSS_PERCENT=3
TAKE_PROFIT_PERCENT=5
USE_AI_VERIFICATION=true

# AI engines
GROQ_MODEL=llama-3.1-70b-versatile
OLLAMA_MODEL=deepseek-r1:14b

# Notifications
SLACK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Service configuration
LOG_LEVEL=INFO
BACKEND_PORT=8000
FRONTEND_PORT=4173
ENVIRONMENT=development
DEBUG=true
