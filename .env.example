# Upbit API Keys
UPBIT_ACCESS_KEY=your_upbit_access_key_here
UPBIT_SECRET_KEY=your_upbit_secret_key_here

# Database Configuration
POSTGRES_USER=autotraderx
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=autotraderx_db
DATABASE_URL=postgresql://autotraderx:change_this_password@postgres:5432/autotraderx_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Application Security
SECRET_KEY=change_this_to_random_secret_key_min_32_chars
ENCRYPTION_KEY=change_this_to_32_byte_key_for_aes256

# Trading Settings
MAX_TRADE_AMOUNT=100000
DAILY_TRADE_LIMIT=10
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=3.0

# Environment
ENVIRONMENT=development
DEBUG=true
